    </div>
    <div class="headname">
        {{#with patientItem}}
        <div class="patientname">
            <h2>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{this.first_name}} {{this.last_name}}'s Requirement
            </h2>
        </div>
        {{/with}}
        {{#with clientItem}}
        <div class="clientname">
            <!-- onclick -->
            <i class="fa-regular fa-bell"></i>&nbsp;&nbsp;Dr.{{this.firstName}}&nbsp;&nbsp;
        </div>
        {{/with}}
    </div>
    {{#with patientItem}}
    <form action="" method="post">
        <div class="mainbox">
            <div class="requirementbox">
                <div class="requirement_title">
                    <div>Data Type</div>
                    <div>Safe Range</div>
                </div>
                <!-- use different name attribute in the input to get the data -->
                <div class="bgl">
                    <input name="bgl_check" type="checkbox" class="checkbox" {{#if this.bgl_requested}} checked="true"{{/if}}>
                    <div class="title">
                        Blood Glucose Level
                    </div>
                    <input name="bgl_min" type="number" placeholder="{{this.bgl_min}} nmol/L">
                    <span>~</span>
                    <input name="bgl_max" type="number" placeholder="{{this.bgl_max}} nmol/L">
                </div>
                <div class="weight">
                    <input name="weight_check" type="checkbox" class="checkbox" {{#if this.weight_requested}} checked="true"{{/if}}>
                    <div class="title">
                        Weight
                    </div>
                    <input name="weight_min" type="number" placeholder="{{this.weight_min}} kg">
                    <span>~</span>
                    <input name="weight_max" type="number" placeholder="{{this.weight_max}} kg">
                </div>
                <div class="dn">
                    <input name="dn_check" type="checkbox" class="checkbox" {{#if this.dn_requested}} checked="true"{{/if}}>
                    <div class="title">
                        Dose Number
                    </div>
                    <input name="dn_min" type="number" placeholder={{this.dn_min}}>
                    <span>~</span>
                    <input name="dn_max" type="number" placeholder={{this.dn_max}}>
                </div>
                <div class="exercise">
                    <input name="exercise_check" type="checkbox" class="checkbox" {{#if this.exercise_requested}} checked="true"{{/if}}>
                    <div class="title">
                        Exercise
                    </div>
                    <input name="exercise_min" type="number" placeholder="{{this.exercise_min}} steps">
                    <span>~</span>
                    <input name="exercise_max" type="number" placeholder="{{this.exercise_max}} steps">
                </div>
            </div>
        </div>
        <input type="submit" value="Save" class="save">
    </form>
    {{/with}}